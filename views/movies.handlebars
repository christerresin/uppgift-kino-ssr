<div class='moviesListContainer'>
  {{#if movies}}
    {{#each movies}}
      <a class='moviesListLink' href='/movie/{{this.id}}'>
        <div class='moviesListMovieContainer'>
          <div
            class='movieCoverImage'
            style='background-image: url({{this.image}});'
          >
          </div>
          <h2 class='movieTitle'>
            {{this.title}}
          </h2>

        </div>
      </a>
    {{/each}}
  {{else}}
    <div>Something went wrong</div>
  {{/if}}
</div>